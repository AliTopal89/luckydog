<!DOCTYPE html>
<html>
<head>
  <title>Luckydog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <link rel="stylesheet" href="assets/forms.css">
  <link rel="stylesheet" href="assets/password.css">

  <link rel="icon" type="image/png" href="http://icons.iconarchive.com/icons/icons8/ios7/16/Animals-Dog-Footprint-icon.png">
  <!-- <script src="/bower_components/zxcvbn/dist/zxcvbn.js"></script> -->
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body id="page-top" class="index">
	<nav class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<!-- Brand and toggle get group for better mobile display -->
			<div class="navbar-header page-scroll">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<div class="logo">
					<a class="navbar-brand page-scroll" href="/">LuckyDog</a>
				</div>
			</div>
			<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				<ul class="nav navbar-nav navbar-right">
					<li class="hidden">
						<a href="#page-top"></a>
					</li>
					<li>
						<% if current_user %>
						<a class="intro-text">Signed in as <%= current_user.name %></a>
					</li>
					<li>
                     	<a class="page-scroll"><%= link_to "Home Page", '/' %></a>
                    </li>
                    <li>
						<a class="page-scroll"><%= link_to 'Logout', '/logout' %></a>
					</li>
					
						<% else %>
					<li>
						<a class="page-scroll"><%= link_to 'Login', '/login' %></a>
					</li>
					<li>
                     	<a class="page-scroll"><%= link_to 'Signup', '/signup' %></a>
                    </li>
                    	
				</ul>
			<% end %>
			</div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>


<%= yield %>

</body>
</html>


